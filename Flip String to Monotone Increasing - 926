class Solution {
public:
    int minFlipsMonoIncr(string s) {
        if(s.size()==0)
            return 0;
        int One=0;
        int flip = 0;
        for(auto ele : s) {
            if(ele=='0') {
                if(One==0)
                    continue;
                else
                    flip++;
            }
            else
                One++;
            if(flip > One)
                flip = One;
        }
        return flip;
    }
};
